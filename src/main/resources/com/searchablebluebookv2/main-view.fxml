<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.input.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox id="rootContainer" alignment="CENTER" prefHeight="486.0" prefWidth="774.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.searchablebluebookv2.Controller">


    <stylesheets>
        <URL value="@stylesheet.css" />
    </stylesheets>

    <MenuBar>
        <menus>
            <Menu mnemonicParsing="false" text="File">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#quitApplication" text="Quit">
                        <accelerator>
                            <KeyCodeCombination alt="UP" code="Q" control="ANY" meta="UP" shift="UP" shortcut="UP" />
                        </accelerator>
                    </MenuItem>
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Edit">
                <items>
                    <MenuItem mnemonicParsing="false" text="Delete" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
                <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                </items>
            </Menu>
        </menus>
    </MenuBar>


   <AnchorPane prefHeight="200.0" prefWidth="200.0">
       <children>
      
           <!-- Controls -->
           <VBox layoutY="-7.0" prefHeight="501.0" prefWidth="760.0" spacing="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
               <padding>
                   <Insets bottom="10.0" left="10.0" right="10.0" top="0.0" />
               </padding>

               <HBox id="searchBox" fillHeight="false" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="52.0" prefWidth="740.0" spacing="10.0">

                   <!-- Drop down to select OpenRolledSection type -->
                   <ComboBox fx:id="shapeSelect" layoutX="15.0" layoutY="33.0" onAction="#onShapeSelect" promptText="Shape" styleClass="dropDownOne">
                       <items>
                           <FXCollections fx:factory="observableArrayList">
                              <String fx:value="Universal Beams (UB)" />
                              <String fx:value="Universal Columns (UC)" />
                              <String fx:value="Universal Bearing Piles (UBP)" />
                              <String fx:value="Parallel Flange Channels (PFC)" />
                              <String fx:value="Equal Leg Angles (L)" />
                              <String fx:value="Unequal Leg Angles (L)" />
                              <String fx:value="Back to back Equal Leg Angles (L)" />
                              <String fx:value="Back to back Unequal Leg Angles (L)" />
                              <String fx:value="Tees (T) split from UB" />
                              <String fx:value="Tees (T) split from UC" />
                           </FXCollections>
                       </items>
                  </ComboBox>
      
                  <!-- Dropdown to select preDesignation -->
                  <ComboBox fx:id="preDesSelect" disable="true" onAction="#onPreDesSelect" styleClass="dropDownTwo">

                  </ComboBox>
      
                  <!-- Dropdown to select subDesignation -->
                  <ComboBox fx:id="subDesSelect" disable="true" onAction="#onSubDesSelect" styleClass="dropDownTwo">

                  </ComboBox>
               </HBox>
            <SplitPane dividerPositions="0.4029255319148936" prefHeight="388.0" prefWidth="754.0">
              <items>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                     <children>
                        <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                           <children>
                                  <Label alignment="TOP_CENTER" textAlignment="CENTER">
                                      <String fx:value="supplementary information" />
                                 <font>
                                    <Font name="System Bold" size="14.0" />
                                 </font>
                                  </Label>
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                     <children>
                        <TreeView fx:id="treeView" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0" />
                     </children>
                  </AnchorPane>
              </items>
            </SplitPane>
           </VBox>

       </children>
   </AnchorPane>



</VBox>
